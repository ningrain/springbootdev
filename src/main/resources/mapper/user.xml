<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hh.springbootdev.dao.UserDao">


    <select id="getUserNums" resultType="int">
        select count(1) from user
    </select>
    <select id="getById" resultType="com.hh.springbootdev.entity.User" parameterType="int">
        select u.id, u.name, u.age from user u where u.id = #{id}
    </select>
    <insert id="save" parameterType="com.hh.springbootdev.entity.User">
        insert into user(name, age) values (#{name}, #{age})
    </insert>

</mapper>